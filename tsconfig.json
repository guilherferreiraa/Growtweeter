{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022"],
    "esModuleInterop": true,  
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleDetection": "force"
  },
  "include": ["src/**/*.ts", "api/index.ts"],
  "exclude": ["prisma.config.ts", "node_modules"]
}